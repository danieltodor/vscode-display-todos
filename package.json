{
    "name": "display-todos",
    "displayName": "Display TODOs",
    "description": "Scans your workspace for TODO, FIXME, HACK, etc comments and displays them in the problems panel.",
    "icon": "./media/icon.png",
    "version": "0.0.6",
    "preview": false,
    "publisher": "danieltodor",
    "repository": {
        "type": "git",
        "url": "https://github.com/danieltodor/vscode-display-todos"
    },
    "engines": {
        "vscode": "^1.109.0"
    },
    "categories": [
        "Visualization",
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "title": "Display TODOs",
            "properties": {
                "displayTodos.keywords": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "keyword": {
                                "type": "string",
                                "description": "The keyword to search for (e.g. TODO, FIXME)."
                            },
                            "severity": {
                                "type": "string",
                                "enum": [
                                    "error",
                                    "warning",
                                    "info",
                                    "hint"
                                ],
                                "description": "The diagnostic severity for this keyword."
                            }
                        },
                        "required": [
                            "keyword",
                            "severity"
                        ]
                    },
                    "default": [
                        {
                            "keyword": "FIXME",
                            "severity": "error"
                        },
                        {
                            "keyword": "BUG",
                            "severity": "error"
                        },
                        {
                            "keyword": "TODO",
                            "severity": "warning"
                        },
                        {
                            "keyword": "HACK",
                            "severity": "warning"
                        },
                        {
                            "keyword": "XXX",
                            "severity": "warning"
                        },
                        {
                            "keyword": "NOTE",
                            "severity": "info"
                        },
                        {
                            "keyword": "REVIEW",
                            "severity": "hint"
                        }
                    ],
                    "description": "List of keywords to scan for and their diagnostic severities."
                },
                "displayTodos.include": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "**/*"
                    ],
                    "description": "Glob patterns for files to include when scanning."
                },
                "displayTodos.exclude": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "**/.git/**",
                        "**/.vscode/**",
                        "**/node_modules/**",
                        "**/build/**",
                        "**/dist/**",
                        "**/out/**"
                    ],
                    "description": "Glob patterns for files to exclude when scanning."
                },
                "displayTodos.pattern": {
                    "type": "string",
                    "default": "\\b({keywords})\\b[:\\s]?(.*)",
                    "description": "Regex pattern used to match keywords. Use {keywords} as a placeholder for the joined keyword alternatives. Must contain two capture groups: group 1 for the matched keyword and group 2 for the trailing text."
                },
                "displayTodos.caseSensitive": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether keyword matching is case-sensitive. When true, only exact case matches (e.g. TODO, not todo) are detected."
                },
                "displayTodos.enable": {
                    "type": "boolean",
                    "default": true,
                    "scope": "language-overridable",
                    "description": "Enable or disable scanning for TODO comments. When false, all diagnostics are cleared and no scanning occurs. Can be overridden per language (e.g. \"[python]\": { \"displayTodos.enable\": false })."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "rm -rf dist && npm run package",
        "compile": "npm run check-types && npm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "npm run check-types && npm run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "10.0.10",
        "@types/node": "25.2.2",
        "@types/vscode": "1.109.0",
        "@vscode/test-cli": "0.0.12",
        "@vscode/test-electron": "2.5.2",
        "esbuild": "0.27.2",
        "eslint": "9.39.2",
        "npm-run-all": "4.1.5",
        "typescript": "5.9.3",
        "typescript-eslint": "8.54.0"
    },
    "dependencies": {
        "minimatch": "10.2.0"
    }
}
